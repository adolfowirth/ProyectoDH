<!DOCTYPE html>
<html lang="en">

<!--------------------- HEAD ----------------->
<%- include('../partials/head') %>
	<!--------------------- BODY ----------------->

	<body>

		<!--------------------- HEADER ----------------->
		<%- include('../partials/header') %>

			<!-------------------- MAIN --------------------->
			<main>
				<!-- DETALLE DEL PRODUCTO -->
				<div class="container products-wrapper">
					<div class="row">
						<div class="col-12">
							<h2 class="products-title">Detalle del producto: <%= product.nombre %>
									<br>
									<br>
							</h2>
						</div>
					</div>
					
					<div class="product-detail">
						<div class="row">
							<div class="col-12 col-lg-8">
								<br>
								<br>

								<img src="<%= product.imagen %>" alt="product imagen" style="text-align:center; width: 500px;display: block;margin: auto;">
								<br>
								<br>

								<h3 class="product-detail-description">
									<%= product.description %> Descripcion: 
								</h3>
								
								<p class="product-detail-title" style="text-align: justify; ">
									<%= product.descripcion %>
								</p>
							</div>
							<div class="col-12 col-lg-4">
								<article class="product-detail-info">

									<% if(product.descuento> 0) {
										let finalPrice = (product.precio * ((100 - product.descuento) / 100)).toFixed(0)
										%>

										<h2 class="products-title"><%= product.nombre %>
												<br>
												<br>
										</h2>

										<p  style=" font-size: 1.8em;color: #39b54a;">
											<span style="text-decoration: line-through;"> $ <%= product.precio %></span>
											/
												<%= product.descuento %>% OFF
											</b>
										</p>

										<p class="product-detail-price" style="font-size: 1.8em;">
											$<%= finalPrice %>
										</p>
										<% } else { %>
											<p class="product-detail-price" style="text-align:center">
												$<%= product.precio %>
											</p>
											
											<% } %>

												<ul class="actions-list">
													<li>

														<p><i class="fas fa-credit-card icono"></i> Pag√° en 12 cuotas
															sin interes</p>
													</li>
													<li>

														<p><i class="fas fa-store icono"></i> Retira gratis en nuestros
															locales</p>
													</li>
												</ul>

												<div class="boton-final contenedor-botones ">
													<button id="" type="submit" class="btn-success boton-seguridad">
														COMPRAR
													</button>

												</div>
											
								</article>
							</div>
						</div>
					</div>
				
				</div>
				
			</main>

			<!-------------------- FOOTER --------------------->
			<%- include ('../partials/footer.ejs') %>
	</body>

</html>